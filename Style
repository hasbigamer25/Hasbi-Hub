local replicated_storage = game:GetService("ReplicatedStorage")
local players = game:GetService("Players")
local teams = game:GetService("Teams")
local user_input_service = game:GetService("UserInputService")
local run_service = game:GetService("RunService")
local player = players.LocalPlayer
local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()

local Window = Library:NewWindow("Hasbi hub | styles")

local function set_style(desired_style)
    if player:FindFirstChild("PlayerStats") then
        local playerStats = player.PlayerStats
        if playerStats:FindFirstChild("Style") then
            playerStats.Style.Value = desired_style
        end
    end
end

local Section = Window:NewSection("Pertahanan")
 
Section:CreateButton("Aiku", function()
set_style("Aiku")
end)

Section:CreateButton("Kunigami", function()
set_style("Kunigami")
end)

Section:CreateButton("Don Lorenzo", function()
set_style("Don Lorenzo")
end)

local Section = Window:NewSection("Pengoper")
 
Section:CreateButton("Sae", function()
set_style("Sae")
end)

Section:CreateButton("Hiori", function()
set_style("Hiori")
end)

Section:CreateButton("Bachira", function()
set_style("Bachira")
end)

